<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bodhi64.dragger.SelectImageActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cap"
            android:src="@drawable/cap"

          android:layout_gravity="center_horizontal"  android:layout_width="150dp"
            android:layout_height="150dp" />

        <ImageView
            android:id="@+id/thug"
            android:src="@drawable/thug"
            android:layout_gravity="center_horizontal"             android:layout_width="150dp"
            android:layout_height="150dp" />

        <ImageView
            android:id="@+id/ears"
            android:src="@drawable/ears"
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"      android:layout_height="150dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
